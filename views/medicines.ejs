<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Medicines</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .animate-fadeIn {
            animation: fadeIn 0.5s ease-out;
        }
        
        .card-shadow {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }
        
        .card-shadow:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }
        
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .table-row:hover {
            background-color: #f8fafc;
            transition: background-color 0.2s ease;
        }
        
        .status-badge {
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            font-size: 0.7rem;
        }
        
        .search-input:focus {
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }
    </style>
</head>

<body class="bg-gradient-to-br from-slate-50 via-blue-50 to-slate-100">

    <div class="flex">

        <!-- Sidebar (reuse same from dashboard) -->
        <%- include("partials/sidebar") %>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">

            <!-- Top Navbar -->
            <%- include("partials/navbar") %>

            <!-- Page Content -->
            <main class="p-6 md:p-8 animate-fadeIn">

                <!-- Header Section -->
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 gap-4">
                    <div>
                        <h1 class="text-3xl font-bold text-gray-800 mb-1">Medicines</h1>
                        <p class="text-gray-500 text-sm">Manage your medicine inventory</p>
                    </div>

                    <a href="/medicines/add"
                        class="gradient-bg text-white px-6 py-3 rounded-xl hover:opacity-90 transition-all duration-300 flex items-center gap-2 w-fit shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                        <i data-feather="plus" class="w-5 h-5"></i> 
                        <span class="font-semibold">Add Medicine</span>
                    </a>
                </div>

                <!-- Search Bar -->
                <div class="mb-6">
                    <form method="GET" action="/medicines" class="max-w-2xl">
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                                <i data-feather="search" class="w-5 h-5 text-gray-400"></i>
                            </div>
                            <input 
                                type="text" 
                                name="search" 
                                placeholder="Search medicine by name, company..." 
                                class="search-input w-full pl-12 pr-4 py-3.5 border-2 border-gray-200 rounded-xl focus:border-blue-500 focus:outline-none transition-all duration-300 bg-white" />
                            <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium">
                                Search
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Medicine Table Card -->
                <div class="bg-white rounded-2xl card-shadow overflow-hidden">
                    
                    <!-- Table Header -->
                    <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
                        <h2 class="text-lg font-semibold text-gray-700 flex items-center gap-2">
                            <i data-feather="list" class="w-5 h-5"></i>
                            Medicine Inventory
                        </h2>
                    </div>

                    <!-- Table -->
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="bg-gradient-to-r from-slate-50 to-blue-50 border-b-2 border-blue-100">
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                        <div class="flex items-center gap-2">
                                            <i data-feather="package" class="w-4 h-4"></i>
                                            Name
                                        </div>
                                    </th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                        <div class="flex items-center gap-2">
                                            <i data-feather="briefcase" class="w-4 h-4"></i>
                                            Company
                                        </div>
                                    </th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                        <div class="flex items-center gap-2">
                                            <i data-feather="calendar" class="w-4 h-4"></i>
                                            Expiry
                                        </div>
                                    </th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                        <div class="flex items-center gap-2">
                                            <i data-feather="hash" class="w-4 h-4"></i>
                                            Quantity
                                        </div>
                                    </th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                        <div class="flex items-center gap-2">
                                            <i data-feather="dollar-sign" class="w-4 h-4"></i>
                                            Price
                                        </div>
                                    </th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                        <div class="flex items-center gap-2">
                                            <i data-feather="bell" class="w-4 h-4"></i>
                                            Reminder
                                        </div>
                                    </th>
                                    <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                        <div class="flex items-center gap-2">
                                            <i data-feather="activity" class="w-4 h-4"></i>
                                            Status
                                        </div>
                                    </th>
                                </tr>
                            </thead>

                            <tbody class="divide-y divide-gray-100">
                                <% if (medicines.length === 0) { %>
                                    <tr>
                                        <td colspan="7" class="text-center py-12">
                                            <div class="flex flex-col items-center gap-3">
                                                <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center">
                                                    <i data-feather="inbox" class="w-10 h-10 text-gray-400"></i>
                                                </div>
                                                <p class="text-gray-500 font-medium">No medicines found</p>
                                                <p class="text-gray-400 text-sm">Add your first medicine to get started</p>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>

                                <% medicines.forEach(med => { 
                                    const expired = new Date(med.expiryDate) < new Date();
                                %>
                                    <tr class="table-row">
                                        <td class="px-6 py-4">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center">
                                                    <i data-feather="pill" class="w-5 h-5 text-blue-600"></i>
                                                </div>
                                                <span class="font-semibold text-gray-800"><%= med.medicineName %></span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="text-gray-600 font-medium"><%= med.companyName %></span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="text-gray-700 bg-gray-50 px-3 py-1.5 rounded-lg text-sm font-medium">
                                                <%= med.expiryDate.toISOString().split("T")[0] %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="text-gray-800 font-semibold text-lg"><%= med.quantity %></span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="text-green-600 font-bold text-base">â‚¹<%= med.price %></span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <span class="text-gray-600 bg-purple-50 px-3 py-1.5 rounded-lg text-sm font-medium">
                                                <%= med.reminderTime %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (expired) { %>
                                                <span class="status-badge inline-flex items-center gap-1.5 bg-gradient-to-r from-red-500 to-red-600 text-white px-4 py-2 rounded-full shadow-sm">
                                                    <i data-feather="x-circle" class="w-3.5 h-3.5"></i>
                                                    Expired
                                                </span>
                                            <% } else { %>
                                                <span class="status-badge inline-flex items-center gap-1.5 bg-gradient-to-r from-green-500 to-emerald-600 text-white px-4 py-2 rounded-full shadow-sm">
                                                    <i data-feather="check-circle" class="w-3.5 h-3.5"></i>
                                                    Active
                                                </span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Table Footer -->
                    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
                        <div class="flex items-center justify-between">
                            <p class="text-sm text-gray-600">
                                Showing <span class="font-semibold text-gray-800"><%= medicines.length %></span> medicines
                            </p>
                            <div class="flex items-center gap-2">
                                <button class="px-3 py-1 rounded-lg border border-gray-300 text-gray-600 hover:bg-gray-100 transition-colors text-sm font-medium">
                                    Previous
                                </button>
                                <button class="px-3 py-1 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition-colors text-sm font-medium">
                                    Next
                                </button>
                            </div>
                        </div>
                    </div>

                </div>

            </main>
        </div>
    </div>

    <script>
        feather.replace();
        
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            sidebar.classList.toggle("-translate-x-full");
        }
    </script>

</body>
</html>